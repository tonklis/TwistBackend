<h1>Listing turns</h1>

<table>
  <tr>
    <th>Game</th>
    <th>Question</th>
    <th>Answer</th>
    <th>Is guess</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @turns.each do |turn| %>
  <tr>
    <td><%= turn.game_id %></td>
    <td><%= turn.question %></td>
    <td><%= turn.answer %></td>
    <td><%= turn.is_guess %></td>
    <td><%= link_to 'Show', turn %></td>
    <td><%= link_to 'Edit', edit_turn_path(turn) %></td>
    <td><%= link_to 'Destroy', turn, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

